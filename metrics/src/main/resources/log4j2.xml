<Configuration>
    
    <Appenders>

        <File name="execution" fileName="execution.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        
    </Appenders>
    
    <Loggers>
        
        <Root level="warn">
            <AppenderRef ref="execution"/>     
        </Root>
        
    </Loggers>
    
</Configuration>
